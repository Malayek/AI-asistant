<body>

<div class="chat-container">
  <h2>AI Assistant (Educational Clone)</h2>
  <div class="chat-box" id="chatBox"></div>

  <input type="text" id="userInput" placeholder="Ask me something...">
  <button onclick="sendMessage()">Send</button>
</div>

<script>
  function sendMessage() {
    const input = document.getElementById("userInput");
    const chatBox = document.getElementById("chatBox");
    const message = input.value.toLowerCase();

    if (message.trim() === "") return;

    // Show user message
    chatBox.innerHTML += `<div class="user"><strong>You:</strong> ${input.value}</div>`;

    let response = "I am still learning. Can you ask something else?";

    // AI LOGIC (RULE-BASED)
    if (message.includes("hello") || message.includes("hi")) {
      response = "Hello! I am an AI assistant created for learning purposes.";
    } 
    else if (message.includes("what is ai")) {
      response = "AI stands for Artificial Intelligence. It is a field of computer science where machines are designed to think, learn, and make decisions like humans.";
    }
    else if (message.includes("what is chatgpt")) {
      response = "ChatGPT is an AI language model that understands text and generates human-like responses using patterns learned from data.";
    }
    else if (message.includes("who made you")) {
      response = "I am a demo AI assistant created by a student as an educational project.";
    }
    else if (message.includes("help")) {
      response = "I can answer basic questions about AI, technology, and this project.";
    }
    else if (message.includes("project")) {
      response = "This project demonstrates a basic AI chatbot using rule-based logic and a web interface.";
    }
    else if (message.includes("time")) {
      response = "I cannot access real-time data, but I can explain how AI systems work.";
    }

    // Show AI response
    chatBox.innerHTML += `<div class="bot"><strong>AI:</strong> ${response}</div>`;

    input.value = "";
    chatBox.scrollTop = chatBox.scrollHeight;
  }
</script>

</body>
</html>
